chicken_menu_price = 10.35
fish_menu_price = 12.40
vegetarian_menu_price = 8.15
delivery_price = 2.50

chicken_menus = int(input())
fish_menus = int(input())
vegetarian_menus = int(input())

sum_menus = chicken_menu_price * chicken_menus + fish_menu_price * fish_menus\
               + vegetarian_menu_price * vegetarian_menus
desert_price = sum_menus * 0.2
total_price = sum_menus + desert_price + delivery_price

print(total_price)
